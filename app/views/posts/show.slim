.container
  #carouselExampleIndicators.carousel.slide data-ride="carousel" 
    ol.carousel-indicators
      li.active data-slide-to="0" data-target="#carouselExampleIndicators" 
      li data-slide-to="1" data-target="#carouselExampleIndicators" 
      li data-slide-to="2" data-target="#carouselExampleIndicators" 
    .carousel-inner
      .carousel-item.active
        = image_tag("banner", :class => "d-block w-100", size: "500x500")
      .carousel-item
        = image_tag("banner1", :class => "d-block w-100", size: "500x500")
      .carousel-item
        = image_tag("banner2", :class => "d-block w-100", size: "500x500")
    a.carousel-control-prev data-slide="prev" href="#carouselExampleIndicators" role="button" 
      span.carousel-control-prev-icon aria-hidden="true" 
      span.sr-only Previous
    a.carousel-control-next data-slide="next" href="#carouselExampleIndicators" role="button" 
      span.carousel-control-next-icon aria-hidden="true" 
      span.sr-only Next
  

.container style=("margin-top: 2em") 
  .row
    .jumbotron style="width:100%" 
      h1.display-4
        = link_to @post.title, root_path
      p.lead
        = @post.updated_at.strftime("%A, %B %e, %Y")
        | by #{@post.user.username} | #{pluralize(@post.views, "View")}
      hr.my-4
      .post_body
        = @post.body
section.section.comments
  .container
    h2.subtitle.is-5
      strong= @post.comments.count
      | Comments
    = render @post.comments
    .comment-form
      hr
      h3.subtitle.is-3 Leave a reply
      = render 'comments/form'
